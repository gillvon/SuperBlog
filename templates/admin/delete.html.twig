{% extends 'base.html.twig' %}

{% block title %} {{ blogpost.title }} - SuperBlog {% endblock %}

{% block body %}

    <div class="container my-5">
        <div class="row">
            <div class="col-sm-12 my-5">


                <div class="d-flex align-items-center">
                    <h3 class="text-white my-3">Are you sure you want to delete {{ blogpost.title }}?</h3>
                    <a href="/admin-panel/blog/deleteConfirmation/{{ blogpost.id }}" class="btn btn-danger ml-3">Yes</a>
                    <a href="/admin-panel" class="btn bg-white ml-3">No</a>
                </div>

                <table class="table table-light">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ blogpost.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Image</th>
                            <td style="width: 50%"><img class="img-fluid" src="https://via.placeholder.com/1920x1080" alt="Card image cap"></td>
                        </tr>
                        <tr>
                            <th scope="row">Title</th>
                            <td>{{ blogpost.title }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Content</th>
                            <td>{{ blogpost.content }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Creation date</th>
                            <td>{{ blogpost.date | date('d/m/Y')}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Views</th>
                            <td>{{ blogpost.views }}</td>
                        </tr>
                    </tbody>
                </table>
                                        
            </div>
      
        </div>
    </div>


{% endblock %}